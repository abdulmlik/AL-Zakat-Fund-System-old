<Application x:Class="AL_Zakat_Fund_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AL_Zakat_Fund_System"
             xmlns:m="clr-namespace:AL_Zakat_Fund_System.Models"
             xmlns:vm="clr-namespace:AL_Zakat_Fund_System.ViewModels"
             xmlns:v="clr-namespace:AL_Zakat_Fund_System.Views"
             StartupUri="mainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Fonts.xaml"/>
                <ResourceDictionary Source="Styles/Texts.xaml"/>
                <ResourceDictionary Source="Styles/Windows.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <m:NullableDateTimeToBooleanConverter x:Key="DateTimeToBoolConverter" />
        </ResourceDictionary>


    </Application.Resources>
</Application>
