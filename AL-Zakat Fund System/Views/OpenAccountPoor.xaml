                    <TextBox Width="190" Grid.Column="3"  Margin="0 0 0 5" />
                    <TextBlock Text="اسم الام الثلاثي* : " HorizontalAlignment="Right"  Margin="10 0 0 5" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" />
                    <TextBox Width="190" Grid.Column="3" Grid.Row="1" />
                </Grid>
                <ComboBox >
                    <ComboBoxItem Content="gfh" />
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                </ComboBox>
                <TextBlock Text=""   />
                <DatePicker Width="150" Language="fr" ></DatePicker>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="بيانات الشخصية" Width="650"></GroupBox>
        <GroupBox Header="بيانات السكن" Padding="5 5" Width="650"></GroupBox>
        <GroupBox Header="الوضع السكني و المركوب" Padding="5 5" Width="650"></GroupBox>
        <GroupBox Header="الوضع الصحي" Padding="5 5" Width="650"></GroupBox>
    </StackPanel>
</UserControl>
